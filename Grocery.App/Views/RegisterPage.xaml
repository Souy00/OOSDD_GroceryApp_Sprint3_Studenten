<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.RegisterPage"
             Title="Register">
    <StackLayout Padding="20" VerticalOptions="Center" Spacing="10">
        <Label Text="Registreren" FontSize="24" HorizontalOptions="Center"/>
        <Entry Placeholder="Naam" Text="{Binding Name}" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Registreren" Command="{Binding RegisterCommand}" />
        <Label Text="{Binding LoginMessage}" TextColor="Red" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
